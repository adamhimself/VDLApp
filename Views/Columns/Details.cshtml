@model VDLApp.Models.Column

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Column</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ColumnNo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ColumnNo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateInstalled)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateInstalled)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateShipped)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateShipped)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CTS)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CTS)
        </dd>
    </dl>
    <dt>
        @Html.DisplayNameFor(model => model.Issues)
    </dt>
    <dd>
        <table class="table">
            <tr>
                <th>Course Title</th>
                <th>Grade</th>
            </tr>
            @foreach (var item in Model.Issues)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </table>
    </dd>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ColumnID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
